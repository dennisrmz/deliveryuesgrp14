<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dip"
    android:stretchColumns="1" >
    <TableRow>
        <TextView android:text="Codigo del local"/>
        <EditText
            android:id="@+id/codLocal"
            android:inputType="number" />
    </TableRow>
    <TableRow>
        <TextView android:text="Codigo Encargado del local" />
        <EditText
            android:id="@+id/editcodEncar"
            android:inputType="number" />
    </TableRow>

    <TableRow>
        <TextView android:text="Nombre del local" />
        <EditText
            android:id="@+id/editNombrelocal"
            android:inputType="text"
            android:maxLength="12" />
    </TableRow>
    <TableRow>
        <TextView android:text="Numero de empleados" />
        <EditText
            android:id="@+id/editNumEmpl"
            android:inputType="number" />
    </TableRow>


    <TableRow>
        <TextView android:text="Descripcion" />
        <EditText
            android:id="@+id/editDescripcionloc"
            android:inputType="text"
            android:maxLength="25" />
    </TableRow>


    <TableRow>
        <TextView android:text="Opciones" />
    </TableRow>

    <TableRow>
        <Button
            android:onClick="insertarLocal"
            android:text="insertar" />
        <Button android:onClick="limpiarTexto"
            android:text="limpiar" />
    </TableRow>
</TableLayout>